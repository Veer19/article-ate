{
	"manifest_version": 3,
	"name": "Article Assistant",
	"version": "1.0",
	"description": "AI-powered article assistant that provides summaries and answers questions",
	"permissions": ["activeTab", "scripting", "https://your-nextjs-app.com/*"],
	"action": {
		"default_icon": {
			"16": "icon16.png",
			"48": "icon48.png",
			"128": "icon128.png"
		}
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"]
		}
	],
	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	}
}
